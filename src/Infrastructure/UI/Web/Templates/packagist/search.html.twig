{% extends 'base.html.twig' %}

{% block body %}
    <div class="container-fluid main-container" style="margin-top:50px">
        <div class="col-md-10 col-md-offset-1 content">
            <h3>
                Available modules
                <small class="text-muted">- source: (packagist.org)</small>
            </h3>



            <div class="row">
                <div class="col" style="margin-top:50px">
                    {{ include('packagist/_form.html.twig') }}
                </div>

                <div class="col">
                    <div class="table-responsive">
                        <table id="availableModules" class=" table table-striped table-hover">
                            <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Name</th>
                                <th scope="col">Url</th>
                                <th scope="col">Downloads</th>
                            </tr>
                            </thead>
                            <tbody>
                            <tr>
                                <td colspan="4">No Modules found.</td>
                            </tr>

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

        </div>
    </div>
{% endblock %}




{% block javascripts %}
    <script>
        $( document ).ready(function() {
            searchModules();
        });

        function searchModules(e = '', req = '') {
            top.restoreSession();
            if (e) {
                e.preventDefault();
            }
            let actionUrl = 'api/search';
            let searchTerm = $('#searchTerm').val();

            return $.post(actionUrl,
                {
                    'searchTerm': searchTerm,
                }, function () {
                }, 'json').done(function (data) {
                if (data.error) {
                    $("#wait").remove();
                    var err = (data.error.search(/Exception/) !== -1 ? 1 : 0);
                    if (!err) {
                        err = (data.error.search(/Error:/) !== -1 ? 1 : 0);
                    }
                    if (err) {
                        alertMsg(data.error);
                    }
                    return false;
                }
                // populate the table
                // extract in a  separate function

                $("#availableModules tbody").empty();
                $.each(data['result'], function(i, item) {
                    var $tr = $('<tr>').append(
                        $('<td>').text(i+1),
                        $('<td>').text(item.name),
                        //$('<td>').text("<a href='" + item.url + "'>" + item.url + "</a>"),
                        $('<td>').html("<a href=\"" + item.url + "\" target=\"_blank\">" + item.url + "</a>"),
                        $('<td>').text(item.downloads)
                    ).appendTo('#availableModules tbody').html();
                    //console.log($tr.wrap('<p>').html());
                })
            }).fail(function (xhr, status, error) {
                alertMsg('Not Authenticated. Restart from Modules menu or ensure credentials are setup from Activity menu.', 5000)
            }).always(function () {
                $("#wait").remove();
            });
        }
    </script>

{% endblock %}



{% block xxx_javascripts %}
    <script>
        // Attach a submit handler to the form
        $( "#searchForm" ).submit(function( event ) {

            // Stop form from submitting normally
            event.preventDefault();

            // Get some values from elements on the page:
            var $form = $( this ),
                term = $form.find( "input[name='searchTerm']" ).val(),
                url = $form.attr( "action" );

            // Send the data using post
            var posting = $.post( url, { s: term } );

            // Put the results in a div
            posting.done(function( data ) {
                console.log(data);
                var content = $( data ).find( "#content" );
                $( "#result" ).empty().append( content );
            });
        });
    </script>

{% endblock %}
{% extends 'base.html.twig' %}

{% block body %}
    <div class="container-fluid main-container" style="margin-top:50px">
        <div class="col-md-10 col-md-offset-1 content">
            <h3>
                Available modules
                <small class="text-muted">- source: (packagist.org)</small>
            </h3>
            <div class="row">
                <div class="col">
                    <div class="table-responsive">
                        <table class="table table-striped table-hover">
                            <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Name</th>
                                <th scope="col">Url</th>
                                <th scope="col">Downloads</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for module in modules %}
                                <tr>
                                    <td>{{ loop.index }}</td>
                                    <td>{{ module.name }}</td>
                                    <td><a href="{{ module.url }}" target="_blank">{{ module.url }}</a></td>
                                    <td>{{ module.downloads }}</td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="4">No Modules found.</td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

        </div>
    </div>
{% endblock %}